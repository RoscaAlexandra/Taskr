@{

    ViewBag.Title = "Users List";
}

<ol class="breadcrumb">
    <li><h3>@ViewBag.Title</h3></li>
</ol>

@foreach (var user in ViewBag.UsersList)
{
    <div class="panel-heading">User Name: @user.UserName</div>

    <div class="panel-body">

        <i class="glyphicon glyphicon-envelope"></i> Email: <span class="label label-default">@user.Email</span>

        <br /><br />

    </div>

    <div class="panel-footer">

        <a class="btn btn-sm btn-success" href="/Users/Edit/@user.Id"> Edit user</a>
        <a class="btn btn-sm btn-success" href="/Users/Show/@user.Id"> View Details</a>

    </div>

    <br /><br />
}
