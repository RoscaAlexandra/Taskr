@model TotallyNotJira.Models.Task1

@{
    ViewBag.Title = "Display task details";
}

<h1>@ViewBag.Title</h1>


<div class="panel panel-default">

    <div class="panel-heading"><strong>@Model.TaskTitle</strong></div>
    <div class="panel-body">
        @Model.TaskDescription
    </div>
    <br />
    <div><strong>Start date: </strong></div>
    <div>@Model.TaskStartDate.ToString("MM/dd/yyyy") </div>
    <br />
    <div><strong>End date:</strong></div>
    <div>@Model.TaskEndDate.ToString("MM/dd/yyyy") </div>
    <br />
    <div><strong> Status: </strong>@Model.TaskStatus </div>

    <div class="panel-footer">
        <a class="btn" href="/Task1/Edit/@Model.TaskId">Edit task</a>
        <br />
    </div>
</div>
<br />
@foreach (var comment in ViewBag.Comments)
{
    <p>@comment.Text</p>
    <br />
    <a href="/Comment/Edit/@comment.CommentId" class="btn">Edit Comment</a>
    <a href="/Task1/Delete/@comment.CommentId" class="btn">Delete Comment</a>
    <hr />
    <br />
}

<br />
<hr />
<a class="btn btn-success" href="/Task1/Index">Go back to overview</a>







