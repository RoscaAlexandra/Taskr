@model WebApplication1.Models.Team

<h2>Create a new Team</h2>

@using (Html.BeginForm(actionName: "New", controllerName: "Team"))
{
    @Html.HiddenFor(x => x.TeamId)

    <div class="form-group">
        @Html.LabelFor(x => x.Name, "Team Name")
        @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Members)
        @Html.ListBoxFor(x => x.MemberIds, new MultiSelectList(ViewBag.AllUsers, "Value", "Text"), new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.MemberIds, null, new { @class = "text-danger" })
    </div>

    <div class="btn-group" role="group">
        <button class="btn btn-success" type="submit"><span class="glyphicon glyphicon-ok"></span>&nbsp;Create Team</button>
        <a href="/Team/Index" class="btn btn-default"><span class="glyphicon glyphicon-remove"></span>&nbsp;Discard</a>
    </div>
}
