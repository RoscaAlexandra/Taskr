@model WebApplication1.Models.Team

<h2>Create a new Team</h2>

@using (Html.BeginForm(actionName: "New", controllerName: "Team"))
{
    @Html.HiddenFor(x => x.TeamId)

    @Html.LabelFor(x => x.Name, "Enter a team name")
    <br />
    @Html.EditorFor(x => x.Name)
    @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })

    <br /><br />

    @Html.LabelFor(x => x.Members)
    <br />
    @Html.ListBoxFor(x => x.MemberIds, new MultiSelectList(ViewBag.AllUsers, "Value", "Text"))
    <br /><br />
    <button type="submit">Save Team</button>
}
