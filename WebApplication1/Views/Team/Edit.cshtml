@model WebApplication1.Models.Team

@{
    ViewBag.Title = "Edit";
}

<h2>Edit @Model.Name</h2>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Team"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.HiddenFor(x => x.TeamId)

    @Html.LabelFor(x => x.Name, "Enter a team name")
    <br />
    @Html.EditorFor(x => x.Name)
    @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })

    <br />
    <br />

    @Html.LabelFor(x => x.Members)
    <br />
    @Html.ListBoxFor(x => x.MemberIds, new MultiSelectList(ViewBag.AllUsers, "Value", "Text", ViewBag.CurrentMembers))
    <br />
    <br />
    <button type="submit">Add Team</button>
}
