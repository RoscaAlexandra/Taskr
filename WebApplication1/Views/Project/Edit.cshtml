@model TotallyNotJira.Models.Project


<div class="page-header">
    <h1>Edit @Model.Name <small>Project</small></h1>
</div>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Project"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.HiddenFor(m => m.UserId)
    @Html.HiddenFor(x => x.ProjectId)

    <div class="form-group">
        @Html.LabelFor(x => x.Name, "Name")
        @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Description, "Description")
        @Html.EditorFor(x => x.Description, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.TeamId)
        @Html.DropDownListFor(x => x.TeamId, new SelectList(Model.Teams, "Value", "Text"), "---Select a team---", new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.TeamId, null, new { @class = "text-danger" })
    </div>

    <div class="btn-group" role="group">
        <button class="btn btn-success" type="submit"><span class="glyphicon glyphicon-ok"></span>&nbsp;Edit Project</button>
        <a href="/Project/Index" class="btn btn-default"><span class="glyphicon glyphicon-remove"></span>&nbsp;Discard</a>
    </div>
}